/* pages/register/register.wxss */
.container {
  padding: 40rpx;
}

.form-item {
  margin-bottom: 40rpx;
}

.form-item text {
  display: block;
  margin-bottom: 10rpx;
  font-size: 32rpx;
  color: #333;
}

input {
  width: 100%;
  height: 80rpx;
  padding: 0 20rpx;
  border: 2rpx solid #eee;
  border-radius: 12rpx;
  font-size: 28rpx;
}

button {
  width: 100%;
  margin-top: 40rpx;
  background-color: #07c160;
  color: #fff;
  border-radius: 12rpx;
}

.tip-box {
  margin-top: 20rpx;
  text-align: center;
  font-size: 28rpx;
  color: #666;
}

.tip-box navigator {
  color: #07c160;
  text-decoration: underline;
}