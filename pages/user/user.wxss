/* pages/user/user.wxss */
.container {
  background-color: #f5f5f5;
  padding: 20px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
}

/* 用户信息 */
.user-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 20px;
}

.avatar {
  width: 80px;
  height: 80px;
  border-radius: 50%;
  margin-bottom: 10px;
}

.nickname {
  font-size: 18px;
  font-weight: bold;
  color: #333;
}

/* 登录按钮 */
.login-btn {
  background-color: #07c160;
  color: #fff;
  border-radius: 25px;
  font-size: 16px;
  padding: 10px 20px;
  box-shadow: 0 4px 8px rgba(7, 193, 96, 0.3);
  border: none;
  margin-bottom: 20px;
}

/* 退出登录按钮 */
.logout-btn {
  background-color: #ff4444;
  color: #fff;
  border-radius: 25px;
  font-size: 16px;
  padding: 10px 20px;
  box-shadow: 0 4px 8px rgba(255, 68, 68, 0.3);
  border: none;
  margin-bottom: 20px;
}

/* 消息栏 */
.message-box {
  display: flex;
  align-items: center;
  margin-bottom: 20px;
}

.unread-badge {
  background-color: #ff4444;
  color: #fff;
  font-size: 12px;
  padding: 4px 8px;
  border-radius: 10px;
  margin-left: 10px;
}

/* 提示框 */
.tip-box {
  text-align: center;
  margin-bottom: 20px;
}

.tip-text {
  font-size: 16px;
  color: #666;
  line-height: 1.5;
}

/* 底部功能按钮 */
.bottom-buttons {
  display: flex;
  justify-content: space-around;
  width: 100%;
}

.func-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #fff;
  border-radius: 10px;
  padding: 20px;
  width: 40%;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

.btn-icon {
  width: 40px;
  height: 40px;
  margin-bottom: 10px;
}

.func-btn text {
  font-size: 14px;
  color: #333;
}