/* 导航栏样式 */
.navbar {
  padding: 20rpx;
  background: #f8f8f8;
}
.my-button {
  font-size: 30rpx;
  color: #007AFF;
}

/* 搜索框样式 */
.search-box {
  padding: 20rpx;
  background: #fff;
}
.search-box input {
  height: 80rpx;
  border-radius: 40rpx;
  background: #f5f5f5;
  padding: 0 30rpx;
}

/* 书籍列表样式 */
.book-list {
  height: calc(100vh - 260rpx);
  padding: 20rpx;
}
.book-item {
  margin-bottom: 30rpx;
  background: #fff;
  border-radius: 10rpx;
  overflow: hidden;
}
.book-item swiper {
  height: 400rpx;
}
.book-info {
  padding: 20rpx;
}
.title {
  font-size: 34rpx;
  color: #333;
  display: block;
}
.price {
  color: #e4393c;
  font-size: 36rpx;
}
.major {
  display: block;
  color: #666;
  font-size: 28rpx;
}