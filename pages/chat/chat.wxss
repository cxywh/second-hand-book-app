.container {
  padding: 20px;
  display: flex;
  flex-direction: column;
  height: 100vh;
}

.messages {
  flex: 1;
  overflow-y: auto;
}

.message {
  margin-bottom: 10px;
  padding: 10px;
  border-radius: 5px;
  max-width: 70%;
}

.buyer {
  background-color: #e0f7fa;
  align-self: flex-end;
}

.seller {
  background-color: #f5f5f5;
  align-self: flex-start;
}

.content {
  font-size: 14px;
}

.timestamp {
  font-size: 12px;
  color: #888;
  margin-top: 5px;
}

.input-box {
  display: flex;
  align-items: center;
  margin-top: 10px;
}

.input-box input {
  flex: 1;
  padding: 10px;
  border: 1px solid #ddd;
  border-radius: 5px;
  margin-right: 10px;
}

.input-box button {
  padding: 10px 20px;
  background-color: #07c160;
  color: white;
  border: none;
  border-radius: 5px;
}