/* pages/orders/orders.wxss */
.container {
  padding: 20px;
}

.order-item {
  display: flex;
  align-items: center;
  margin-bottom: 20px;
  padding: 10px;
  border: 1px solid #eee;
  border-radius: 8px;
}

.book-image {
  width: 80px;
  height: 80px;
  margin-right: 10px;
  border-radius: 4px;
}

.order-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.book-title {
  font-size: 16px;
  font-weight: bold;
  margin-bottom: 5px;
}

.order-price {
  font-size: 14px;
  color: #888;
  margin-bottom: 5px;
}

.order-time {
  font-size: 12px;
  color: #aaa;
}